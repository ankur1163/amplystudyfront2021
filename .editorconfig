# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
ident_style = tab
ident_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0